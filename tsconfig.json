{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "sourceMap": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "types",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "lib": [
      "es2016",
      "dom"
    ],
    "removeComments": false
  },
  "include": [
    "src"
  ],
}
